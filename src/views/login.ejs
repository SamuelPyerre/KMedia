
<%- include('includes/head') %>    
<%- include('includes/navbar.ejs') %>
    
<div class="container">
      <h4 class="display-1 text-center text-primary">FAÇA SEU LOGIN</h4>
      <p class="h3 text-center text-primary">OU CADASTRE-SE PARA TER ACESSO AO SISTEMA</p>
        
      <%- include('includes/messages') %>
      <div class="row">
      

          <div class="row">
            
            <div class="col-lg mt-2">
              <p class="fs-5 text-info text-end mb-0 mt-3">CRIE SEU CADASTRO</p>
              <p class="fs-7 text-dark text-end">E venha fazer parte da nossa Comunidade Escolar!</p>
              
              <form action="/login/register" method="POST">
                <label class="form-label">Digite seu Nome</label>
                <input type="text" name="nome" class="form-control">
                <label class="form-label">Digite seu E-mail</label>
                <input type="email" name="email" class="form-control">
                <label class="form-label">Digite sua Senha</label>
                <input type="password" name="password" class="form-control mb-1">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
                
              </form>
            </div>
            <div class="col-lg mt-3">
              <p class="fs-1 text-dark mb-0">FAÇA SEU LOGIN</p>
              <form action="/login/login" method="POST">
                <label class="form-label">Digite seu E-mail</label>
                <input type="email" class="form-control">
                <label class="form-label">Digite sua Senha</label>
                <input type="password" class="form-control mb-1">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <button type="submit" class="btn btn-outline-dark">Acessar</button>
                </div>
              </form>
            
               
             
            </div>
          
          
          
        

      </div>
    </div>
